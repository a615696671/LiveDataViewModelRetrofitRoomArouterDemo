<resources>
    <style name="ActivityInOutAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/leftin</item>
        <item name="android:activityCloseExitAnimation">@anim/leftout</item>
    </style>
    <!--解决app启动白屏问题  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/base_themColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/base_themColorPrimaryDark</item>
        <item name="colorAccent">@color/base_themColorPrimaryDark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textSize">@dimen/common_size14</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:editTextColor">@color/base_themColorPrimaryDark</item>
    </style>

    <!--app启动白屏与第三放支付以及分享冲突处理的AppThemeShare-->
    <style name="AppThemeShare" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/base_themColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/base_themColorPrimaryDark</item>
        <item name="colorAccent">@color/base_themColorPrimaryDark</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/common_bg_translucent</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:textSize">@dimen/common_size14</item>
        <item name="android:editTextColor">@color/base_themColorPrimaryDark</item>
    </style>

</resources>
